<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <!-- parameters -->
<!--    <parameters>-->
<!--&lt;!&ndash;        <parameter key="openai.apikey">OPENAI_APIKEY</parameter>&ndash;&gt;-->
<!--&lt;!&ndash;        <parameter key="openai.organization">OPENAI_ORGANISATION</parameter>&ndash;&gt;-->
<!--    </parameters>-->

    <!-- services -->
    <services>

        <!-- OpenAiService -->
        <service id="Jostkleigrewe\OpenAiCoreBundle\Service\OpenAiService" class="Jostkleigrewe\OpenAiCoreBundle\Service\OpenAiService" public="true" autowire="true">
            <argument key="$apikey" type="string">%jostkleigrewe_open_ai_core.apikey%</argument>
        </service>

        <!-- OpenAiSerializerService -->
        <service id="Jostkleigrewe\OpenAiCoreBundle\Service\OpenAiSerializerService" class="Jostkleigrewe\OpenAiCoreBundle\Service\OpenAiSerializerService" public="true" autowire="true">
        </service>

        <!-- OpenAiSerializer -->
        <service id="Jostkleigrewe\OpenAiCoreBundle\Serializer\OpenAiSerializer" class="Jostkleigrewe\OpenAiCoreBundle\Serializer\OpenAiSerializer"  public="true" autowire="true">
        </service>

    </services>
</container>
